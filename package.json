{
  "name": "private-to-do-list",
  "version": "1.0.0",
  "description": "A private to-do list web application",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node app.js",
    "nm": "nodemon -x 'clear && node app.js'",
    "test": "NODE_ENV=test node --trace-deprecation node_modules/.bin/jest",
    "test-dev": "NODE_ENV=test jest --detectOpenHandles --coverage",
    "test-win": "SET NODE_ENV=test & jest --detectOpenHandles --coverage",
    "test-clean": "NODE_ENV=test STYLE=clean jest --verbose",
    "dev": "NODE_ENV=development node app.js",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noah-be/taskmaster-backend.git"
  },
  "author": "Noah Frank",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/noah-be/taskmaster-backend/issues"
  },
  "homepage": "https://github.com/noah-be/taskmaster-backend#readme",
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/jestConsoleMock.js"
    ],
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    }
  },
  "prettier": {
    "prettier.singleQuote": true,
    "prettier.trailingComma": "none",
    "prettier.jsxBracketSameLine": true,
    "prettier.arrowParens": "avoid",
    "prettier.proseWrap": "never",
    "prettier.printWidth": 200,
    "prettier.endOfLine": "auto",
    "prettier.eslintIntegration": true,
    "prettier.useTabs": false,
    "prettier.tabWidth": 2,
    "prettier.semi": true,
    "prettier.bracketSpacing": true,
    "prettier.jsxSingleQuote": false,
    "prettier.importStatementFormatter": "none"
  },
  "eslintConfig": {
    "settings": {
      "import/resolver": {
        "babel-module": {}
      }
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "sourceType": "module",
      "allowImportExportEverywhere": true
    },
    "env": {
      "browser": true,
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "prettier"
    ],
    "plugins": [
      "import",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "import/order": [
        "error",
        {
          "groups": [
            [
              "builtin",
              "external",
              "internal"
            ]
          ],
          "newlines-between": "always"
        }
      ],
      "import/no-duplicates": "error",
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "always",
          "jsx": "never",
          "ts": "never",
          "tsx": "never"
        }
      ]
    }
  },
  "nodemonConfig": {
    "ext": "ejs,js,html"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "esmodules": true
          }
        }
      ]
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "root": [
            "./"
          ]
        }
      ]
    ],
    "sourceMaps": "inline"
  },
  "dependencies": {
    "@sentry/node": "^8.48.0",
    "@sentry/profiling-node": "^8.48.0",
    "axe-puppeteer": "^1.1.1",
    "axios": "^1.6.8",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "eslint-plugin-module-resolver": "^1.5.0",
    "esm": "^3.2.25",
    "express": "^4.18.3",
    "fast-glob": "^3.3.2",
    "google-auth-library": "^9.7.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongodb": "^6.5.0",
    "mongoose": "^8.3.1",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "path": "^0.12.7",
    "punycode": "^2.3.1",
    "puppeteer": "^22.6.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.24.4",
    "@babel/eslint-parser": "^7.24.1",
    "@babel/node": "^7.23.9",
    "@babel/plugin-transform-runtime": "^7.24.0",
    "@babel/preset-env": "^7.24.4",
    "@babel/register": "^7.23.7",
    "@babel/runtime": "^7.24.0",
    "@jest/globals": "^29.7.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "concurrently": "^8.2.2",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-babel-module": "^5.3.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-scope": "^8.0.1",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.8",
    "node-mocks-http": "^1.14.1",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4"
  }
}
